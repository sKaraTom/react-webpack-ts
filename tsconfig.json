{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "removeComments": true,
        "module": "commonjs",
        "target": "es5",
        "lib": ["es6", "dom"],
        "jsx": "react",
        "esModuleInterop": true
    },
    "exclude": ["node_modules", "**/*.spec.ts"],
    "include": ["./src/**/*"]
}